#:import utils kivy.utils
#:import Factory kivy.factory.Factory

<SDRootWidget>:
  apps: []
  canvas:
    Color:
      rgb: utils.get_color_from_hex('#222837')
    Rectangle:
      pos: self.pos
      size: self.size
  size_hint: 1, 1
  orientation: 'vertical'
  padding: 10
  size_hint: 1, 1
  UserSelect:
    id: users
    selected_user: None
    config: root.model
    size_hint: 1, None
    height: '100dp'
  Widget:
    size_hint_y: None
    height: 10
  Apps:
    id: apps
    app_manager: root.app_manager
    model: root.model
    selected_user: users.selected_user
    size_hint_y: 1

<UserSelect>:
  config: None
  BoxLayout:
    id: layout
    padding: 10
    canvas:
      Color:
        rgba: utils.get_color_from_hex('#52576655')
      Rectangle:
        pos: self.pos
        size: self.size
    orientation: 'vertical'
    size_hint_y: None
    Label:
      text: 'Steam Users'

<Apps>:
  id: layout
  app_manager: None
  selected_user: None
  apps: []
  canvas:
    Color:
      rgba: utils.get_color_from_hex('#52576655')
    Rectangle:
      pos: self.pos
      size: self.size
  orientation: 'vertical'
  Label:
    text: 'Web Apps'
    size_hint_y: None
    height: 40
  HLine:
    color: '#AAAAAA'
    offset: 20
  Widget:
    size_hint_y: None
    height: 4
  ScrollView:
    do_scroll: False, True
    BoxLayout:
      id: apps_container
      orientation: 'vertical'
      size_hint_y: None
      height: sum([c.height for c in self.children])
  Button:
    size_hint_y: None
    text: 'Add'
    #disabled: root.selected_user is None
    height: 44
    on_release: root.show_edit_dialog(None)

<SDApp>:
  is_enabled: False
  orientation: 'horizontal'
  size_hint_y: None
  height: 42
  padding: 4
  BoxLayout:
    width: 100
    orientation: 'horizontal'
    BoxLayout:
      orientation: 'vertical'
      Label:
        size_hint_x: None
        width: self.texture_size[0]
        height: 20
        text: root.app.name
      Widget:
        size_hint_y: None
        height: 2
      Label:
        size_hint_x: None
        height: 20
        padding_x: 6
        font_size: 12
        color: utils.get_color_from_hex('#999999')
        width: self.texture_size[0]
        text: root.app.url
    Widget:
  Button:
    id: toggle_for_user_button
    size_hint_x: None
    width: 80
    text: 'En/Disable' if root.selected_user is None else ('Disable' if root.is_enabled else 'Enable')
    disabled: root.selected_user is None
    on_release: root.dispatch('on_toggle_enabled')
  Button:
    id: edit_button
    size_hint_x: None
    width: 80
    text: 'Edit'
    on_release: root.dispatch('on_edit', root.app)
  Button:
    id: remove_button
    size_hint_x: None
    width: 80
    text: 'Remove'
    on_release: root.dispatch('on_remove')


<EditAppDialog>:
  field_label_width: 200
  app_name: 'My App'
  app_url: 'https://youtube.com'
  app_show_address_bar: False
  title: 'Edit App "%s"' % root.app_name
  size_hint: 0.95, 0.95
  auto_dismiss: False
  BoxLayout:
    orientation: 'vertical'
    Widget:
      size_hint_y: None
      height: 10
    TextField:
      label: 'name'
      placeholder: root.app_name
      label_width: root.field_label_width
      value_change: root.set_name
    TextField:
      label: 'url'
      placeholder: root.app_url
      label_width: root.field_label_width
      value_change: root.set_url
    CheckBoxField:
      label: 'show address bar'
      default: root.app_show_address_bar
      label_width: root.field_label_width
      value_change: root.set_show_address_bar
    Widget:
      size_hint_y: 0
      height: 20
#    HLine:
#      color: '#AAAAAA'
#      offset: 20
    Label:
      text: 'Images'
      font_size: 18
      size_hint_y: None
      size_hint_x: None
      size: self.texture_size
      padding_x: 5
      halign: 'left'
      height: 60
    ImageField:
      label: 'icon'
      label_width: root.field_label_width
    Widget:
      height: 40
    Widget:
    BoxLayout:
      orientation: 'horizontal'
      size_hint_y: None
      Widget:
      Button:
        size_hint_y: None
        size_hint_x: 1
        minimum_width: 60
        height: 40
        text: 'Save'
        on_release: root.apply()
      Widget:
      Button:
        size_hint_y: None
        size_hint_x: 1
        minimum_width: 60
        height: 40
        text: 'Cancel'
        on_release: root.dismiss()
      Widget:

<TextField@BoxLayout>:
  label: 'label'
  placeholder: ''
  label_width: 100
  value_change: None
  size_hint_y: None
  height: 35
  orientation: 'horizontal'
  BoxLayout:
    size_hint_x: None
    width: root.label_width
    orientation: 'horizontal'
    Label:
      width: root.label_width
      size_hint_x: None
      size: self.texture_size
      text: root.label
      padding_x: 5
      halign: 'left'
    Widget:
      size_hint_x: 1
  TextInput:
    text: root.placeholder
    on_text: root.value_change is not None and root.value_change(self.text)

<ImageField@BoxLayout>:
  label: 'label'
  label_width: 100
  image_size: (64, 64)
  image_source: None
  size_hint_y: None
  height: 64
  orientation: 'horizontal'
  BoxLayout:
    size_hint_x: None
    width: root.label_width
    orientation: 'horizontal'
    Label:
      width: root.label_width
      size_hint_x: None
      size: self.texture_size
      text: root.label
      padding_x: 5
      halign: 'left'
    Widget:
      size_hint_x: 1
  AsyncImage:
    id: img
    source: root.image_source
    size: root.image_size[0] * (root.height / root.image_size[1]), root.height
  TextInput:
    text: ''
    on_text: img.source = self.text


<CheckBoxField@BoxLayout>
  label: 'label'
  default: False
  label_width: 100
  value_change: None
  size_hint_y: None
  height: 35
  orientation: 'horizontal'
  BoxLayout:
    size_hint_x: None
    width: root.label_width
    orientation: 'horizontal'
    Label:
      size_hint_x: None
      size: self.texture_size
      text: root.label
      padding_x: 5
      halign: 'left'
    Widget:
      size_hint_x: 1
  CheckBox:
    value: root.default
    size_hint_x: None
    on_release: root.value_change is not None and root.value_change(self.value)
  Widget:
    size_hint_x: 1

<HLine>:
  id: hline
  color: '#FF0000'
  offset: 0
  size_hint_y: None
  height: 0
  canvas:
    Color:
      rgb: utils.get_color_from_hex(root.color)
    Rectangle:
      pos: root.offset, hline.center_y
      size: hline.width - root.offset, 2
